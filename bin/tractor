#!/usr/bin/env node
'use strict';

// Dependencies:
var tractor = require('commander');
var log = require('npmlog');

log.level = 'info';

tractor
.version('0.9.0');

tractor
.command('init')
.description('initialise tractor in a project')
.action(require('../dist/init/').default);

tractor
.command('start')
.description('Start the tractor server')
.action(require('../dist/start/').default);

tractor.parse(process.argv);
