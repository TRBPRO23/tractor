{
  "name": "@tractor/file-structure",
  "version": "1.0.1-beta.2",
  "description": "File structure handler for tractor",
  "author": "Craig Spence <craigspence0@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TradeMe/tractor.git"
  },
  "bugs": {
    "url": "https://github.com/TradeMe/tractor/issues",
    "email": "craigspence0@gmail.com"
  },
  "main": "dist/index.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run clean && npm run lint && npm run cover && npm run compile",
    "clean": "rimraf dist && rimraf reports",
    "compile": "babel src/ --out-dir dist --ignore *.spec.js",
    "cover": "istanbul cover --config ../../.istanbulrc.json ../../node_modules/.bin/_mocha -- --opts ../../.mocharc 'src/**/*.spec.js'",
    "lint": "eslint src",
    "test": "mocha --opts ../../.mocharc 'src/**/*.spec.js'",
    "watch": "npm-watch"
  },
  "watch": {
    "build": "src/**/*.js"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "chokidar": "^2.0.0",
    "express": "^4.16.2",
    "graceful-fs": "^4.1.11",
    "lodash.debounce": "^4.0.8"
  },
  "peerDependencies": {
    "@tractor/core": "^1.0.1-beta.2"
  },
  "devDependencies": {
    "@tractor/error-handler": "^1.0.1-beta.2",
    "@tractor/logger": "^1.0.1-beta.2"
  }
}
