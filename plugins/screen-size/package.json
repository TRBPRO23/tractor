{
  "name": "@tractor-plugins/screen-size",
  "version": "0.4.1",
  "description": "tractor plugin for manipulating screen size",
  "author": "Craig Spence <craigspence0@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TradeMe/tractor.git"
  },
  "bugs": {
    "url": "https://github.com/TradeMe/tractor/issues",
    "email": "craigspence0@gmail.com"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "npm run clean && npm run lint && npm run compile && npm run cover",
    "clean": "rimraf dist",
    "compile": "babel src/ --out-dir dist/ --ignore *.spec.js,src/tractor/client --config-file ../../babel.config.js",
    "cover": "nyc npm run test",
    "lint": "eslint src --ignore-path ../../.eslintignore",
    "test": "cd ../../ && mocha --opts mocha.opts 'plugins/screen-size/src/**/*.spec.js' && cd ./plugins/screen-size",
    "pretest:e2e": "npm run test:setup",
    "test:e2e": "protractor ./tractor/protractor.conf.js --baseUrl=\"http://localhost:4321\"",
    "test:e2e:debug": "node --inspect-brk node_modules/.bin/protractor ./tractor/protractor.conf.js --baseUrl=\"http://localhost:4321\"",
    "test:setup": "rimraf test && mkdirp test && npm run webdriver",
    "tractor": "tractor start",
    "tractor:init": "tractor init",
    "pretractor:test": "npm run test:setup",
    "tractor:test": "tractor start --config=\"./test.tractor.conf.js\"",
    "watch": "npm-watch",
    "webdriver": "webdriver-manager update && tractor patch"
  },
  "watch": {
    "build": "src/**/*.js"
  },
  "dependencies": {
    "mochawesome": "^3.0.3"
  },
  "peerDependencies": {
    "@tractor/core": "^1.0.1-beta.10"
  },
  "devDependencies": {
    "@tractor/core": "^1.0.1-beta.10",
    "@tractor/config-loader": "^1.0.1-beta.10",
    "@tractor/error-handler": "^1.0.1-beta.10",
    "@tractor/logger": "^1.0.1-beta.10",
    "@tractor/plugin-loader": "^1.0.1-beta.10",
    "@tractor/ui": "^1.0.1-beta.10",
    "@tractor/unit-test": "^1.0.1-beta.10",
    "@tractor-plugins/mocha-specs": "^0.2.5",
    "@tractor-plugins/screen-size": "^0.4.1"
  }
}
